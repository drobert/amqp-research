<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-amqp="http://www.springframework.org/schema/integration/amqp"
	xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/integration/amqp http://www.springframework.org/schema/integration/amqp/spring-integration-amqp-4.0.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration-4.0.xsd
		http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<rabbit:admin connection-factory="amqpConnectionFactory" />
	<rabbit:connection-factory id="amqpConnectionFactory" host="${mq.host:demo.rabbitmq}" username="${mq.user:guest}" password="${mq.pass:guest}" />
	
	<!-- a queue with no 'name'. will get a randomly-generated queue name/id and die when the application stops, 
	     but will have exclusive access (no one else can pull messages from this queue) -->
	<rabbit:queue id="catchAllQueue" name="etl-catch-all-queue" durable="false" exclusive="false" auto-delete="true"/>
	
	<rabbit:topic-exchange id="etlExchange" name="${mq.exchange.etl:etl-demo}" auto-delete="true" durable="false">
		<rabbit:bindings>
			<!-- adding a 'route all messages here' binding pattern for easy demo-ing -->
			<rabbit:binding pattern="#" queue="catchAllQueue" />
		</rabbit:bindings>
	</rabbit:topic-exchange>

</beans>